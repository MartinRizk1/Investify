# Environment Configuration Template
# Copy this file to .env and update with your specific values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=127.0.0.1
FLASK_PORT=5001
SECRET_KEY=your-secret-key-here-minimum-32-characters-long

# Security Configuration
CSRF_TIME_LIMIT=3600
RATE_LIMIT_DEFAULT=100 per hour
WTF_CSRF_TIME_LIMIT=3600

# Data Source Configuration
YFINANCE_CACHE_ENABLED=True
YFINANCE_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Optional: Database Configuration (if needed in future)
# DATABASE_URL=sqlite:///data/moneymaker.db

# Optional: External APIs (if needed)
# ALPHA_VANTAGE_API_KEY=your-api-key
# FINNHUB_API_KEY=your-api-key
